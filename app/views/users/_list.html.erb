
 <div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
     <h2>User info</h2>
       <%= image_tag user.get_profile_image %>
       <table class="table">
         <tbody>
           <tr>
             <th>name</th>
             <th><%=user.name  %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%=user.introduction  %></th>
           </tr>
         </tbody>
       </table>
       <div class="row">
          <div class="btn btn-outline-secondary btn-block">
              <%= link_to  edit_user_path(user.id) do %>

                 <i class="fas fa-user-cog"></i>
                 <%end%>
          </div>
       </div>
       <h2 class="mt-3">New book</h2>
         <%= form_with model: @book1=Book.new do |f| %>

          <h4>Title</h4>
            <%= f.text_field :title %>
          <h4>Opinion</h4>
            <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
       <% end %>
   </div>
    </div>
 </div>

